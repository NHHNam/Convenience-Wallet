<div id="border_login_page">
    <form class="login-form" novalidate method="post" action="/users/login">
        <div class="header_login_form">Đăng nhập</div>
        <div class="field">
            <label for="username">Username</label>
            {{#if username}}
            <input type="text" class="field-input" id="username" value="{{username}}" name="username" aria-describedby="emailHelp" placeholder="Enter your username">
            {{else}}
            <input type="text" class="field-input" id="username" name="username" aria-describedby="emailHelp" placeholder="Enter your username">
            {{/if}}
        </div>
        <div class="field">
            <label for="password">Password</label>
            {{#if password}}
            <input type="password" class="field-input" id="password" value="{{password}}" name="password" placeholder="Enter your password">
            {{else}}
            <input type="password" class="field-input" id="password" name="password" placeholder="Enter your password">
            {{/if}}
        </div>
        <div class="field">
            {{#if message}}
            <p class="error_login">{{message}}</p>
            {{/if}}
        </div>
        <button type="submit" class="btn_login">Submit</button>
    </form>

    <div id="account-dialog" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
      
        <!-- Modal Header -->
        <div class="modal-header">
            <div>
                <h3 class="modal-title text-success">Đăng ký tài khoản thành công</h3> <br>
                <h5>Thông tin đăng nhập</h5>
            </div>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
          Username: {{username}} <br>
          Password: {{password}}
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-dark" data-dismiss="modal">Đóng</button>
        </div>
        
      </div>
    </div>
  </div>
</div>

<script>
    {{#if signupSuccessful}}
        $('#account-dialog').modal('show')
    {{/if}}
</script>