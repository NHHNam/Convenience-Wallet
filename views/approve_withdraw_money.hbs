{{!-- body --}}

<div class="container mt-5 mb-5">
    <h2>Danh sách người dùng yêu cầu chuyển tiền </h2>    
    <small>
        <a href="/admin/">Back</a>
    </small>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>STT</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Activated</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
                <tr>
                    <td>{{inc @index}}</td>
                    <td>{{name}}</td>
                    <td>{{email}}</td>
                    <td>{{address}}</td>
                    <td>{{activated}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>


{{!-- end body --}}
