{{!-- body --}}

<div class="container mt-5 mb-5">
    <h1 class="brand-object">Mua thẻ cào điện thoại</h1>    
    <form method="post" class="shadow-none p-3 mb-5 bg-light rounded">
        <div class="form-group">
            <label for="">Nhà mạng</label>
            <select class="form-control" name="network" id="">
                {{#each datNetwork}}
                    <option value="{{network}}">{{network}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="">Mệnh giá</label>
            <select class="form-control" name="menhGia" id="">
                <option value="10000">10.000 VND</option>
                <option value="20000">20.000 VND</option>
                <option value="50000">50.000 VND</option>
                <option value="100000">100.000 VND</option>
            </select>
        </div>
        <div class="form-group">
            <label for="">Số lượng</label>
            <select class="form-control" name="SL" id="">
                <option value="1">1 cái</option>
                <option value="2">2 cái</option>
                <option value="3">3 cái</option>
                <option value="4">4 cái</option>
                <option value="5">5 cái</option>
            </select>
        </div>
        <input type="submit" value="Mua" class="w-100 btn btn-primary">
    </form>
</div>

{{#each listCard}}
    <div>{{codeCard}}</div>
{{/each}}

{{!-- end body --}}